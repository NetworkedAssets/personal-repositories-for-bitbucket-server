<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${project.groupId}.${project.artifactId}"
	name="${project.name}" plugins-version="2">
	<plugin-info>
		<description>${project.description}</description>
		<version>${project.version}</version>
		<vendor name="${project.organization.name}" url="${project.organization.url}" />
		<param name="plugin-icon">images/pluginIcon.png</param>
		<param name="plugin-logo">images/pluginLogo.png</param>
	</plugin-info>

	<ao key="${ao-key-name}">
		<description>The AO module for this plugin.</description>
		<entity>org.networkedassets.atlassian.stash.private_repositories_permissions.ao.Group</entity>
	</ao>

    <component-import key="ao" name="Active Objects service"
                      interface="com.atlassian.activeobjects.external.ActiveObjects">
        <description>Component to access Active Objects functionality from the plugin</description>
    </component-import>
    
    <component key="allowedGroupsService" name="Allowed Groups Service" class="org.networkedassets.atlassian.stash.private_repositories_permissions.ao.AoAllowedGroupsService"/>
    
	<!-- add our i18n resource -->
	<resource type="i18n" name="i18n"
		location="private-repositories-permissions-plugin" />

	<!-- add our web resources -->
	<web-resource key="private-repositories-permissions-plugin-resources"
		name="private-repositories-permissions-plugin Web Resources">
		<dependency>com.atlassian.auiplugin:ajs</dependency>
		<resource type="download" name="private-repositories-permissions-plugin.css"
			location="/css/private-repositories-permissions-plugin.css" />
		<resource type="download" name="private-repositories-permissions-plugin.js"
			location="/js/private-repositories-permissions-plugin.js" />
		<resource type="download" name="images/" location="/images" />
	</web-resource>

	<!-- publish our component -->
	<component key="myPluginComponent"
		class="org.networkedassets.atlassian.stash.private_repositories_permissions.MyPluginComponentImpl"
		public="true">
		<interface>org.networkedassets.atlassian.stash.private_repositories_permissions.MyPluginComponent
		</interface>
	</component>
	<!-- import from the product container -->
	<component-import key="applicationProperties"
		interface="com.atlassian.sal.api.ApplicationProperties" />
	<servlet-filter name="Private Repository Creation Filter"
		i18n-name-key="private-repository-creation-filter.name" key="private-repository-creation-filter"
		class="org.networkedassets.atlassian.stash.private_repositories_permissions.servlet.filter.PrivateRepositoryCreationFilter"
		location="before-decoration" weight="100">
		<description key="private-repository-creation-filter.description">The Private Repository Creation Filter
			Plugin
		</description>

		<url-pattern>/*</url-pattern>
		<!-- <url-pattern>/users/user/repos/*</url-pattern> -->
		<!-- <url-pattern>/mvc/projects/*/repos/*</url-pattern> -->


		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</servlet-filter>

	<web-panel key="private-repository-button-hiding-web-panel"
		name="Private Repository Permissions Web Panel" location="stash.user.profile.header"
		weight="20">
		<label key="private-repository-button-hiding-web-panel"></label>
		<resource name="view" type="static"><![CDATA[<script>jQuery(document).ready(function() {jQuery('a[href$="users/user/repos?create"], .repository-table, .repository-table-message, .aui-navgroup-inner a').remove();});</script><div style="display:none"></div>]]></resource>
		<dependency>org.networkedassets.atlassian.stash.private_repositories_permissions:private-repositories-permissions-plugin-resources
		</dependency>
	</web-panel>

	<web-item key="private-repository-administration-link-item"
		name="Private Repository Permissions Admin Link" section="atl.admin/admin-general-section"
		weight="35">
		<label key="private-repository-administration-link-item">Private repo permissions</label>
		<link linkId="google_home">http://google.pl</link>
	</web-item>

</atlassian-plugin>
