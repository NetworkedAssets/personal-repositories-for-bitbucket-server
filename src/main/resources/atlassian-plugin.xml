<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${project.groupId}.${project.artifactId}"
	name="${project.name}" plugins-version="2">
	<plugin-info>
		<description>${project.description}</description>
		<version>${project.version}</version>
		<vendor name="${project.organization.name}" url="${project.organization.url}" />
		<param name="plugin-icon">images/pluginIcon.png</param>
		<param name="plugin-logo">images/pluginLogo.png</param>
	</plugin-info>

	<ao key="ao-module">
		<description>The AO module for this plugin.</description>
		<entity>org.networkedassets.atlassian.stash.private_repositories_permissions.ao.Group
		</entity>
		<entity>org.networkedassets.atlassian.stash.private_repositories_permissions.ao.User
		</entity>
	</ao>

	<component-import key="ao" name="Active Objects service"
		interface="com.atlassian.activeobjects.external.ActiveObjects">
		<description>Component to access Active Objects functionality from the
			plugin
		</description>
	</component-import>

	<!-- add our i18n resource -->
	<resource type="i18n" name="i18n"
		location="private-repositories-permissions-plugin" />

	<!-- publish our components -->
	<component key="allowedGroupsService" name="Allowed Groups Service"
		class="org.networkedassets.atlassian.stash.private_repositories_permissions.ao.AoAllowedGroupsService" />

	<component key="allowedUsersService" name="Allowed Users Service"
		class="org.networkedassets.atlassian.stash.private_repositories_permissions.ao.AoAllowedUsersService" />

	<component key="userPermissionsExaminer" name="User Permissions Examiner"
		class="org.networkedassets.atlassian.stash.private_repositories_permissions.service.UserPermissionsExaminer" />

	<component key="userRestService" name="Users Rest Service"
		class="org.networkedassets.atlassian.stash.private_repositories_permissions.rest.UserRestService" />
		
	<component key="groupRestService" name="Groups Rest Service"
		class="org.networkedassets.atlassian.stash.private_repositories_permissions.rest.GroupRestService" />

	<component key="usersInfoBuilder" name="User Info Builder"
		class="org.networkedassets.atlassian.stash.private_repositories_permissions.rest.UsersInfoBuilder" />
		
	<component key="groupsInfoBuilder" name="Group Info Builder"
		class="org.networkedassets.atlassian.stash.private_repositories_permissions.rest.GroupsInfoBuilder" />


	<!-- import from the product container -->
	<component-import key="applicationProperties"
		interface="com.atlassian.sal.api.ApplicationProperties" />

	<servlet-filter name="Private Repository Creation Filter"
		i18n-name-key="private-repository-creation-filter.name" key="private-repository-creation-filter"
		class="org.networkedassets.atlassian.stash.private_repositories_permissions.servlet.filter.PrivateRepositoryCreationFilter"
		location="before-decoration" weight="100">
		<description key="private-repository-creation-filter.description">The Private Repository Creation Filter
			Plugin
		</description>

		<url-pattern>/*</url-pattern>

		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</servlet-filter>

	<web-resource key="web-resources">
		<resource type="download" name="private-repos.css" location="/css/private-repos.css" />
		<transformation extension="soy">
			<transformer key="soyTransformer" />
		</transformation>
		<resource type="download" name="userRow-soy.js" location="/templates/userRow.soy" />
		<resource type="download" name="groupRow-soy.js" location="/templates/groupRow.soy" />
		<resource type="download" name="groupsTable-soy.js" location="/templates/groupsTable.soy" />
		<resource type="download" name="BuiltApp.js" location="/js/BuiltApp.js" />
	</web-resource>

	<stash-resource key="templates-soy" name="Soy Templates">
		<directory location="/templates/" />
		<dependency>com.atlassian.stash.stash-web-plugin:global</dependency>
		<dependency>com.atlassian.auiplugin:aui-select2</dependency>
		<dependency>org.networkedassets.atlassian.stash.private-repositories-permissions-plugin:web-resources
		</dependency>
	</stash-resource>
	<component-import key="soyTemplateRenderer"
		interface="com.atlassian.soy.renderer.SoyTemplateRenderer" />

	<web-item key="admin-private-repos" name="Admin Menu Web Item"
		section="atl.admin/admin-general-section">
		<description>Manage access right to Private Repositories</description>
		<label>Private Repositories</label>
		<link linkId="private_repositories">/plugins/servlet/privatereposadmin</link>
	</web-item>

	<servlet name="Administration Panel Servlet" key="administrationPanel"
		class="org.networkedassets.atlassian.stash.private_repositories_permissions.servlet.AdministrationPanelServlet">
		<description>Displays private repositories administration panel
		</description>
		<url-pattern>/privatereposadmin</url-pattern>
	</servlet>

	<rest key="privateReposRest" path="/privaterepos" version="1.0">
		<description>Provides private repositories rest services.
		</description>
	</rest>

	<web-panel key="button-hiding-web-panel" name="Private Repository Permissions Web Panel"
		location="stash.user.profile.header" weight="20">
		<label key="private-repository-button-hiding-web-panel"></label>
		<resource name="view" type="static">
			<![CDATA[
			<script>
				AJS.toInit(function() {
					AJS.$('a[href$="/repos?create"], .repository-table, .repository-table-message, .aui-navgroup-inner a').remove();
				});
			</script>
			]]>
		</resource>
		<condition key="canUsePrivateRepositoriesCondition"
			class="org.networkedassets.atlassian.stash.private_repositories_permissions.web.CanUsePrivateRepositoriesCondition"
			invert="true" />
	</web-panel>

</atlassian-plugin>
