<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${project.groupId}.${project.artifactId}"
	name="${project.name}" plugins-version="2">
	<plugin-info>
		<description>${project.description}</description>
		<version>${project.version}</version>
		<vendor name="${project.organization.name}" url="${project.organization.url}" />
		<param name="plugin-icon">images/pluginIcon.png</param>
		<param name="plugin-logo">images/pluginLogo.png</param>
	</plugin-info>

	<ao key="ao-module">
		<description>The AO module for this plugin.</description>
		<entity>org.networkedassets.atlassian.stash.privaterepos.ao.Group
		</entity>
		<entity>org.networkedassets.atlassian.stash.privaterepos.ao.User
		</entity>
	</ao>

	<component-import key="ao" name="Active Objects service"
		interface="com.atlassian.activeobjects.external.ActiveObjects">
		<description>Component to access Active Objects functionality from the
			plugin
		</description>
	</component-import>

	<!-- add our i18n resource -->
	<resource type="i18n" name="i18n"
		location="/i18n" />

	<!-- publish our components -->
	<component key="allowedGroupsService" name="Allowed Groups Service"
		class="org.networkedassets.atlassian.stash.privaterepos.ao.AoAllowedGroupsService" />

	<component key="allowedUsersService" name="Allowed Users Service"
		class="org.networkedassets.atlassian.stash.privaterepos.ao.AoAllowedUsersService" />

	<component key="userPermissionsExaminer" name="User Permissions Examiner"
		class="org.networkedassets.atlassian.stash.privaterepos.service.UserPermissionsExaminer" />

	<component key="userRestService" name="Users Rest Service"
		class="org.networkedassets.atlassian.stash.privaterepos.rest.UserRestService" />
		
	<component key="groupRestService" name="Groups Rest Service"
		class="org.networkedassets.atlassian.stash.privaterepos.rest.GroupRestService" />
		
	<component key="repositoriesRestService" name="Repositories Rest Service"
		class="org.networkedassets.atlassian.stash.privaterepos.rest.RepositoriesRestService" />
		
	<component key="authorizationVerifier" name="Rest Authorization Verifier"
		class="org.networkedassets.atlassian.stash.privaterepos.rest.AuthorizationVerifier" />

	<component key="usersInfoBuilder" name="User Info Builder"
		class="org.networkedassets.atlassian.stash.privaterepos.rest.UsersInfoBuilder" />
		
	<component key="groupsInfoBuilder" name="Group Info Builder"
		class="org.networkedassets.atlassian.stash.privaterepos.rest.GroupsInfoBuilder" />
		
	<component key="repositoryCreationRequestListener" name="Repository Creation Request Listener"
	class="org.networkedassets.atlassian.stash.privaterepos.service.RepositoryCreationRequestListener" />

	<!-- import from the product container -->
	<component-import key="applicationProperties"
		interface="com.atlassian.sal.api.ApplicationProperties" />

	<web-resource key="web-resources">
		<resource type="download" name="privaterepos.css" location="/css/privaterepos.css" />
		<transformation extension="soy">
			<transformer key="soyTransformer" />
		</transformation>
		<resource type="download" name="table-soy.js" location="/templates/table.soy" />
		<resource type="download" name="user-soy.js" location="/templates/user.soy" />
		<resource type="download" name="group-soy.js" location="/templates/group.soy" />
		<resource type="download" name="model/Group.js" location="/js/model/Group.js" />
		<resource type="download" name="model/Groups.js" location="/js/model/Groups.js" />
		<resource type="download" name="model/GroupBatch.js" location="/js/model/GroupBatch.js" />
		<resource type="download" name="model/User.js" location="/js/model/User.js" />
		<resource type="download" name="model/Users.js" location="/js/model/Users.js" />
		<resource type="download" name="model/UserBatch.js" location="/js/model/UserBatch.js" />
		<resource type="download" name="view/GroupRow.js" location="/js/view/GroupRow.js" />
		<resource type="download" name="view/GroupsTable.js" location="/js/view/GroupsTable.js" />
		<resource type="download" name="view/UserRow.js" location="/js/view/UserRow.js" />
		<resource type="download" name="view/UsersTable.js" location="/js/view/UsersTable.js" />
		<resource type="download" name="view/Table.js" location="/js/view/Table.js" />
		<resource type="download" name="App.js" location="/js/App.js" />
	</web-resource>

	<stash-resource key="templates-soy" name="Soy Templates">
		<directory location="/templates/" />
		<dependency>com.atlassian.stash.stash-web-plugin:global</dependency>
		<dependency>com.atlassian.auiplugin:aui-select2</dependency>
		<dependency>org.networkedassets.atlassian.stash.privaterepos:web-resources
		</dependency>
	</stash-resource>
	<component-import key="soyTemplateRenderer"
		interface="com.atlassian.soy.renderer.SoyTemplateRenderer" />

	<web-item key="admin-private-repos" name="Admin Menu Web Item"
		section="atl.admin/admin-general-section">
		<description>Manage access right to Private Repositories</description>
		<label>Private Repositories</label>
		<link linkId="private_repositories">/plugins/servlet/privatereposadmin</link>
	</web-item>

	<servlet name="Administration Panel Servlet" key="administrationPanel"
		class="org.networkedassets.atlassian.stash.privaterepos.servlet.AdministrationPanelServlet">
		<description>Displays private repositories administration panel
		</description>
		<url-pattern>/privatereposadmin</url-pattern>
	</servlet>

	<rest key="privateReposRest" path="/privaterepos" version="1.0">
		<description>Provides private repositories rest services.
		</description>
	</rest>

	<web-panel key="button-hiding-web-panel" name="Private Repository Permissions Web Panel"
		location="stash.user.profile.header" weight="20">
		<label key="private-repository-button-hiding-web-panel"></label>
		<resource name="view" type="static">
			<![CDATA[
			<script>
				AJS.toInit(function() {
					AJS.$('a[href$="/repos?create"], .repository-table, .repository-table-message, .aui-navgroup-inner a').remove();
				});
			</script>
			]]>
		</resource>
		<condition key="canUsePrivateRepositoriesCondition"
			class="org.networkedassets.atlassian.stash.privaterepos.web.CanUsePrivateRepositoriesCondition"
			invert="true" />
	</web-panel>

</atlassian-plugin>
