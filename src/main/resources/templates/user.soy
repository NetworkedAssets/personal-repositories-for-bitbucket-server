{namespace org.networkedassets.personalstash}

/**
 * User name with avatar
 * @param user
 */
{template .userWithAvatar}
	<div class="avatar-with-name" title="{$user.displayName}">
		<span class="aui-avatar aui-avatar-small user-avatar" data-username="{$user.name}">
			<span class="aui-avatar-inner">
				<img src="{$user.avatarUrl}" alt="{$user.displayName}">
			</span>
		</span>
		<a href="{$user.profileUrl}">{$user.displayName}</a>
	</div>
{/template}


/**
 * User name with avatar
 * @param user
 */
{template .inactiveUserWithAvatar}
	<div class="avatar-with-name inactive" title="{$user.displayName}">
		<span class="aui-avatar aui-avatar-small user-avatar" data-username="{$user.name}">
			<span class="aui-avatar-inner">
				<img src="{$user.avatarUrl}" alt="{$user.displayName}">
			</span>
		</span>
		<a href="{$user.profileUrl}">{$user.displayName} [{getText('org.networkedassets.atlassian.stash.personalstash.repositories.user.inactive')}]</a>
	</div>
{/template}
